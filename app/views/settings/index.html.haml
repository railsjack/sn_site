.row
	.container
		.col-md-6.col-md-offset-2
			= simple_form_for(@setting, html: {class:'form-horizontal'}) do |f|
				.panel.panel-default
					.panel-heading
						%h3 Settings
					.panel-body
						- Setting.setting_keys.each do |setting|
							.form-group
								= f.label :key, setting.to_s.humanize+" (USD):", class: 'col-md-4 control-label'
								.col-md-6{:title => "Enter your "+setting.to_s.humanize}
									%input{name: 'setting[key][]', value: setting, type: 'hidden'}
									%input{name: 'setting[value][]', type: 'text', placeholder: setting.to_s.humanize, value: @setting_values["#{setting}"],required: true, class:'form-control'}
					.panel-footer
						= f.submit value:'Save', class:'btn btn-success pull-right'
						.clearfix