<div class="container">
  <div class="row">  
    <h3 class="bg-warning  text-center">Accounts</h3>  
      <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr class="bg-success">
              <th >Name</th>
              <th>Contact</th>
              <th>Phone</th>
              <th>Email</th>
              <th colspan="3">Actions</th>
            </tr>
          </thead>  
        <tbody>
          <tr class="success  text-center"><td  colspan="7"><h5>All Individual Users</h5></td></tr>  
          <% @profiles.each do |profile| %>
            <% user = profile.user %>
            <% if user %>
            <tr>
              <%= render user if user.admin? %>
            </tr>
            <% end %>  
          <% end %>                        
 
        </tbody>
      </table>
    </div>
  </div>
</div>
