<div class="container">
  <div class="row">
          <h4 class="bg-warning  text-center">Admin Users</h4>
          <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr class="bg-success">
                  <th >Name</th>
                  <th>Contact</th>
                  <th>Phone</th>
                  <th>Email</th>
                  <th colspan="3">Actions</th>
                </tr>
              </thead>  
            <tbody>      
              <% @profiles.each do |profile| %>
                <% if profile.user %>            
                    <% user = profile.user %>
                    <% if user.admin? %>
                    <tr>
                      <%= render user if user.admin? %>
                    </tr>
                    <% end %>  
                <% end %>  
              <% end %>          
            </tbody>
          </table>
        </div>
    </div>     
</div>

