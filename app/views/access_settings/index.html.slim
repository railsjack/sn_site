#memberAccessModal.modal.fade aria-hidden="true" aria-labelledby="myModalLabel1" role="dialog" tabindex="-1"
  .member-modal-dialog
    = simple_form_for(@access_setting, remote: true, url: update_access_access_settings_path, html: {class: 'form-horizontal'}) do |f|
      .modal-content
        .modal-header
          button.new_member_cancel_button.close aria-hidden="true" data-dismiss="modal" type="button"  x
          #member_selected
        .modal-body
          center
            .well style='width:50%'
              .form-horizontal
                .form-group
                  = f.label :tab, 'Modify Access', class: 'col-md-5 control-label'
                  .col-md-7.text-justify#check_boxes
                    = f.input :tab, as: :check_boxes, label: false, collection: Tab.all, class: 'form-control'
              = f.input :user, as: :hidden

        .modal-footer
          button.new_member_cancel_button.btn.btn-danger aria-hidden="true" data-dismiss="modal"  Cancel
          = f.button :submit, 'Save', class: 'btn btn-success pull-left'

#memberHistoryModal.modal.fade aria-hidden="true" aria-labelledby="myModalLabel1" role="dialog" tabindex="-1"
  .member-modal-dialog
    .modal-content
      .modal-header
        button.new_member_cancel_button.close aria-hidden="true" data-dismiss="modal" type="button"  x
        #member_selected
      .modal-body
        .well
          .form-horizontal
            .form-group
              label for='history_start_date' class='col-md-4 control-label' Start Date
              .col-md-4
                input type="text" id="history_start_date" class="form-control"
            .form-group
              label for='history_end_date' class='col-md-4 control-label' End Date
              .col-md-4
                input type="text" id="history_end_date" class="form-control"
            .form-group
              label for='history_end_date' class='col-md-4 control-label'
              .col-md-3
                input type="button" id="history_generate_btn" class="form-control btn btn-success" value="Generate"

            input type='hidden' id="user_id"
          #memberHistoryContent
      .modal-footer
        button.btn.btn-danger aria-hidden="true" data-dismiss="modal" Cancel
        button.btn.btn-success.pull-left aria-hidden="true" data-dismiss="modal" OK

