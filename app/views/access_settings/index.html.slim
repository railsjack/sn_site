#newMemberModal.modal.fade aria-hidden="true" aria-labelledby="myModalLabel1" role="dialog" tabindex="-1"
  .member-modal-dialog
    .modal-content
      .modal-header
        button.new_member_cancel_button.close aria-hidden="true" data-dismiss="modal" type="button"  x
        h4 style="color:green"  Add User
      .modal-body
        center
          .well
            .form-horizontal
              .form-group
                label for='new_member_first_name' class='col-md-4 control-label' First Name
                .col-md-5
                  input type="text" id="new_member_first_name" class="form-control"
              .form-group
                label for='new_member_last_name' class='col-md-4 control-label' Last Name
                .col-md-5
                  input type="text" id="new_member_last_name" class="form-control"
              .form-group
                label for='new_member_email' class='col-md-4 control-label' Email
                .col-md-5
                  input type="text" id="new_member_email" class="form-control"
              .form-group
                label for='new_member_password' class='col-md-4 control-label' Password
                .col-md-5
                  input type="password" id="new_member_password" class="form-control"
              .form-group
                .text-danger * Minimum is 8 characters
              .form-group
                label for='new_member_password_confirm' class='col-md-4 control-label' Password Confirmation
                .col-md-5
                  input type="password" id="new_member_password_confirm" class="form-control"
      .modal-footer
        button.new_member_cancel_button.btn.btn-danger aria-hidden="true" data-dismiss="modal"  Cancel
        button.btn.btn-success.pull-left#new_member_button Save

