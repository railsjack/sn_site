<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Loved One</th>
      <th>Status</th>
      <th>State</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.employee %></td>
        <td><%= trip.lovedone %></td>
        <td><%= trip.status %></td>
        <td><%= trip.state %></td>
        <td><%= trip.latitude %></td>
        <td><%= trip.longitude %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Delete', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

