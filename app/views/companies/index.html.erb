<h1> companies</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Business name</th>
      <th>Provider type</th>
      <th>Telephone</th>
      <th>Mobile phone number</th>
      <th>Get notification</th>
      <th>Address</th>
      <th>City</th>
      
      <th>State</th>
      <th>Zip</th>
      <th>Contact last name</th>
      <th>Contact first name</th>
        <th>Status</th>    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.company_name %></td>
        <td><%= company.business_name %></td>
        <td><%= company.provider_type %></td>
        <td><%= company.telephone %></td>
        <td><%= company.mobile_phone_number %></td>
        <td><%= company.get_notification %></td>
        <td><%= company.address %></td>
        <td><%= company.city %></td>
        
        <td><%= company.state %></td>
        <td><%= company.zip %></td>
        <td><%= company.contact_last_name %></td>
        <td><%= company.contact_first_name %></td>
        <td><%= company.status %></td>  
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

